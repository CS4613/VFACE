<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/face_thumbnail"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="@+id/tvAbsence"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="start|center"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="65dp"
        android:id="@+id/tvDetectedFace"
        android:layout_alignParentStart="@+id/face_thumbnail"
        android:layout_alignParentEnd="@+id/tvAbsence"/>

    <TextView
        android:id="@+id/tvAbsence"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="end|center"
        android:layout_alignParentStart="@+id/tvDetectedFace"/>

</RelativeLayout>